<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_main"
    android:orientation="vertical"
    android:padding="@dimen/padding14"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/padding2"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size22" />
    </FrameLayout>

    <Button
        android:id="@+id/button_search"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/padding24"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/search"
        android:textAllCaps="false"
        app:icon="@drawable/ic_vector"
        tools:ignore="RtlCompat"
        app:iconGravity="textStart"
        />

    <Button
        android:id="@+id/button_media"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/padding16"

        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/media"
        android:textAllCaps="false"
        app:icon="@drawable/ic_media"
        tools:ignore="RtlCompat"
        app:iconGravity="textStart"

        />

    <Button
        android:id="@+id/button_settings"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/padding16"
        android:layout_marginBottom="@dimen/padding14"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/settings"
        android:textAllCaps="false"
        app:icon="@drawable/ic_sitting"
        tools:ignore="RtlCompat"
    />
</LinearLayout>
